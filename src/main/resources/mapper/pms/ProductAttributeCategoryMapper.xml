<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.macro.mall.tiny.modules.pms.mapper.ProductAttributeCategoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.macro.mall.tiny.modules.pms.model.ProductAttributeCategory">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="attribute_count" property="attributeCount" />
        <result column="param_count" property="paramCount" />
    </resultMap>


    <resultMap id="ListWithAttr" type="com.macro.mall.tiny.dto.ProductAttributeCategoryDTO">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <collection property="productAttributeList" columnPrefix="attr_" resultMap="com.macro.mall.tiny.modules.pms.mapper.ProductAttributeMapper.BaseResultMap" />
    </resultMap>

    <select id="getListWithAttr" resultMap="ListWithAttr">
        SELECT
            pac.id,
            pac.`name`,
            pa.id attr_id,
            pa.`name` attr_name
        FROM
            pms_product_attribute_category pac
        LEFT JOIN
            pms_product_attribute pa
        ON
            pac.id = pa.product_attribute_category_id
        and
            pa.type = 1
    </select>


</mapper>
